<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/backgrndBlue">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp" android:textSize="24sp" android:id="@+id/textView"
                android:textColor="@android:color/black" android:textStyle="bold" android:typeface="monospace"/>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80" android:gravity="center" android:id="@+id/table">

            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Button
                        style="@style/button"
                        android:tag="00"
                        android:id="@+id/button00" android:onClick="onClick"/>
                <Button
                        android:tag="01"
                        style="@style/button" android:id="@+id/button01" android:onClick="onClick"/>
                <Button
                        android:tag="02"
                        style="@style/button" android:id="@+id/button02" android:onClick="onClick"/>
                <Button
                        android:tag="03"
                        style="@style/button" android:id="@+id/button03" android:onClick="onClick"/>
                <Button
                        android:tag="04"
                        style="@style/button" android:id="@+id/button04" android:onClick="onClick"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Button
                        android:tag="10"
                        style="@style/button" android:id="@+id/button10" android:onClick="onClick"/>
                <Button
                        android:tag="11"
                        style="@style/button" android:id="@+id/button11" android:onClick="onClick"/>
                <Button
                        android:tag="12"
                        style="@style/button" android:id="@+id/button12" android:onClick="onClick"/>
                <Button
                        android:tag="13"
                        style="@style/button" android:id="@+id/button13" android:onClick="onClick"/>
                <Button
                        android:tag="14"
                        style="@style/button" android:id="@+id/button14" android:onClick="onClick"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Button
                        android:tag="20"
                        style="@style/button" android:id="@+id/button20" android:onClick="onClick"/>
                <Button
                        android:tag="21"
                        style="@style/button" android:id="@+id/button21" android:onClick="onClick"/>
                <Button
                        android:tag="22"
                        style="@style/button" android:id="@+id/button22" android:onClick="onClick"/>
                <Button
                        android:tag="23"
                        style="@style/button" android:id="@+id/button23" android:onClick="onClick"/>
                <Button
                        android:tag="24"
                        style="@style/button" android:id="@+id/button24" android:onClick="onClick"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Button
                        android:tag="30"
                        style="@style/button" android:id="@+id/button30" android:onClick="onClick"/>
                <Button
                        android:tag="31"
                        style="@style/button" android:id="@+id/button31" android:onClick="onClick"/>
                <Button
                        android:tag="32"
                        style="@style/button" android:id="@+id/button32" android:onClick="onClick"/>
                <Button
                        android:tag="33"
                        style="@style/button" android:id="@+id/button33" android:onClick="onClick"/>
                <Button
                        android:tag="34"
                        style="@style/button" android:id="@+id/button34" android:onClick="onClick"/>
            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button
                        android:tag="40"
                        style="@style/button" android:id="@+id/button40" android:onClick="onClick"/>
                <Button
                        android:tag="41"
                        style="@style/button" android:id="@+id/button41" android:onClick="onClick"/>
                <Button
                        android:tag="42"
                        style="@style/button" android:id="@+id/button42" android:onClick="onClick"/>
                <Button
                        android:tag="43"
                        style="@style/button" android:id="@+id/button43" android:onClick="onClick"/>
                <Button
                        android:tag="44"
                        style="@style/button" android:id="@+id/button44" android:onClick="onClick"/>
            </TableRow>
        </TableLayout>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
            <Button
                    android:text="Refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/refresh"
                     android:onClick="refresh" android:textStyle="bold"
                    android:textSize="18sp"/>
            <Button
                    android:text="@string/pve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/changeMode" android:textSize="18sp"
                    android:textStyle="bold" android:textColor="@android:color/black" android:onClick="changeMode"/>
        </TableRow>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>