<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/icon"
            app:layout_constraintEnd_toEndOf="@+id/title" app:layout_constraintStart_toStartOf="@+id/title"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/title"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="@+id/icon" app:layout_constraintEnd_toEndOf="@+id/icon"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/icon"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:rating="0"/>
</android.support.constraint.ConstraintLayout>